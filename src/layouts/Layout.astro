---
import "@navikt/ds-css";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Administrer biljardturneringer pÃ¥ arbeidsplassen" } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="no">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" href="https://cdn.nav.no/aksel/fonts/SourceSans3-normal.woff2" as="font" type="font/woff2" crossorigin />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Hopp til hovedinnhold</a>
    <div class="app-container">
      <header class="app-header">
        <nav class="nav-container" aria-label="Hovednavigasjon">
          <a href="/" class="nav-logo" aria-label="Biljardturnering - Hjem">
            ðŸŽ± Biljardturnering
          </a>
          <button class="mobile-menu-toggle" aria-expanded="false" aria-controls="nav-links" aria-label="Ã…pne meny">
            <span class="hamburger"></span>
          </button>
          <div class="nav-links" id="nav-links" role="menubar">
            <a href="/" role="menuitem" class={currentPath === "/" ? "active" : ""}>Hjem</a>
            <a href="/turneringer" role="menuitem" class={currentPath.startsWith("/turnering") ? "active" : ""}>Turneringer</a>
            <a href="/admin" role="menuitem" class={currentPath.startsWith("/admin") ? "active" : ""}>Admin</a>
          </div>
        </nav>
      </header>
      <main id="main-content" class="main-content" tabindex="-1">
        <slot />
      </main>
      <footer class="app-footer">
        <p>Â© {new Date().getFullYear()} Biljardturnering - NAV</p>
      </footer>
    </div>
  </body>
</html>

<script>
  const toggle = document.querySelector('.mobile-menu-toggle');
  const navLinks = document.querySelector('.nav-links');
  
  toggle?.addEventListener('click', () => {
    const isExpanded = toggle.getAttribute('aria-expanded') === 'true';
    toggle.setAttribute('aria-expanded', String(!isExpanded));
    navLinks?.classList.toggle('open');
  });
</script>

<style is:global>
  :root {
    --max-width: 1200px;
  }
  
  * {
    box-sizing: border-box;
  }
  
  html {
    scroll-behavior: smooth;
  }
  
  body {
    margin: 0;
    min-height: 100vh;
    background-color: var(--a-bg-default);
    font-family: "Source Sans 3", Arial, sans-serif;
    line-height: 1.5;
  }

  .skip-link {
    position: absolute;
    top: -40px;
    left: 0;
    background: var(--a-surface-action);
    color: var(--a-text-on-action);
    padding: var(--a-spacing-2) var(--a-spacing-4);
    z-index: 100;
    text-decoration: none;
    font-weight: var(--a-font-weight-bold);
  }

  .skip-link:focus {
    top: 0;
  }
  
  .app-container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
  
  .app-header {
    background-color: var(--a-surface-default);
    border-bottom: 1px solid var(--a-border-subtle);
    padding: var(--a-spacing-4) var(--a-spacing-6);
    position: sticky;
    top: 0;
    z-index: 50;
  }
  
  .nav-container {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--a-spacing-4);
  }
  
  .nav-logo {
    font-size: var(--a-font-size-heading-medium);
    font-weight: var(--a-font-weight-bold);
    color: var(--a-text-default);
    text-decoration: none;
  }

  .nav-logo:focus-visible {
    outline: 2px solid var(--a-border-focus);
    outline-offset: 2px;
  }

  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--a-spacing-2);
  }

  .hamburger {
    display: block;
    width: 24px;
    height: 2px;
    background: var(--a-text-default);
    position: relative;
  }

  .hamburger::before,
  .hamburger::after {
    content: '';
    position: absolute;
    width: 24px;
    height: 2px;
    background: var(--a-text-default);
    left: 0;
  }

  .hamburger::before { top: -8px; }
  .hamburger::after { top: 8px; }
  
  .nav-links {
    display: flex;
    gap: var(--a-spacing-6);
  }
  
  .nav-links a {
    color: var(--a-text-default);
    text-decoration: none;
    font-weight: var(--a-font-weight-regular);
    transition: color 0.2s;
    padding: var(--a-spacing-2) var(--a-spacing-1);
    border-bottom: 2px solid transparent;
  }
  
  .nav-links a:hover {
    color: var(--a-text-action);
  }

  .nav-links a:focus-visible {
    outline: 2px solid var(--a-border-focus);
    outline-offset: 2px;
  }

  .nav-links a.active {
    color: var(--a-text-action);
    border-bottom-color: var(--a-border-action);
    font-weight: var(--a-font-weight-bold);
  }

  @media (max-width: 640px) {
    .mobile-menu-toggle {
      display: block;
    }

    .nav-links {
      display: none;
      width: 100%;
      flex-direction: column;
      gap: var(--a-spacing-2);
      padding-top: var(--a-spacing-4);
    }

    .nav-links.open {
      display: flex;
    }

    .nav-links a {
      padding: var(--a-spacing-3);
      background: var(--a-surface-subtle);
      border-radius: var(--a-border-radius-medium);
      border-bottom: none;
    }
  }
  
  .main-content {
    flex: 1;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: var(--a-spacing-8) var(--a-spacing-6);
    width: 100%;
  }

  .main-content:focus {
    outline: none;
  }

  @media (max-width: 640px) {
    .main-content {
      padding: var(--a-spacing-4);
    }
  }
  
  .app-footer {
    background-color: var(--a-surface-subtle);
    padding: var(--a-spacing-6);
    text-align: center;
    color: var(--a-text-subtle);
    margin-top: auto;
  }

  .page-header {
    margin-bottom: var(--a-spacing-8);
  }
  
  .card {
    background: var(--a-surface-default);
    border: 1px solid var(--a-border-subtle);
    border-radius: var(--a-border-radius-medium);
    padding: var(--a-spacing-6);
    margin-bottom: var(--a-spacing-4);
  }

  @media (max-width: 640px) {
    .card {
      padding: var(--a-spacing-4);
    }
  }
  
  .card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--a-spacing-4);
  }

  .form-group {
    margin-bottom: var(--a-spacing-4);
  }

  .button-group {
    display: flex;
    flex-wrap: wrap;
    gap: var(--a-spacing-3);
    margin-top: var(--a-spacing-4);
  }

  .status-badge {
    display: inline-block;
    padding: var(--a-spacing-1) var(--a-spacing-3);
    border-radius: var(--a-border-radius-full);
    font-size: var(--a-font-size-small);
    font-weight: var(--a-font-weight-bold);
  }

  .status-registration {
    background-color: var(--a-blue-100);
    color: var(--a-blue-700);
  }

  .status-active {
    background-color: var(--a-green-100);
    color: var(--a-green-700);
  }

  .status-completed {
    background-color: var(--a-gray-100);
    color: var(--a-gray-700);
  }

  .table-container {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  button:focus-visible,
  a:focus-visible,
  input:focus-visible,
  select:focus-visible,
  textarea:focus-visible {
    outline: 2px solid var(--a-border-focus);
    outline-offset: 2px;
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>
